.latest-view.col-md-4.col-md-offset-4

	%p
		=link_to 'Add yours', new_coffee_attempt_path

	-if @latest_attempt.present?
	
		%h2 Latest

		.thumbnail
			= link_to (image_tag(@latest_attempt.picture_url, :width => 300)), @latest_attempt if @latest_attempt.picture.present?


		%h3=@latest_attempt.name
		%p= @latest_attempt.description
		%p.small-font 
			Posted by:
			= @latest_attempt.user.user_name


