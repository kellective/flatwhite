<p id="notice"><%= notice %></p>

<p>
  <strong>Name</strong>
  <%= @coffee_attempt.name %>
</p>

<p>
  <strong>Description</strong>
  <%= @coffee_attempt.description %>
</p>

<p>
  <strong>Picture</strong>
  <%= image_tag(@coffee_attempt.picture_url) if @coffee_attempt.picture.present? %>
</p>

<h3>Comments</h3>
<% @coffee_attempt.comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
  </div>
<% end %>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_coffee_attempt_path(@coffee_attempt) %> |
<%= link_to 'Back', coffee_attempts_path %>
